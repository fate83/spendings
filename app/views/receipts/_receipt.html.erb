<tr class="hover:bg-slate-50">
  <td class="p-4">
    <%= receipt.shopped_at %>
  </td>
  <td class="p-4">
    <%= receipt.shop.name %>
  </td>
  <td class="p-4">
    <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
      <%= link_to "Edit items", receipt_items_path(receipt), class: "text-sm font-semibold" %>
      <%= link_to "Show", receipt, class: "text-sm font-semibold" %>
      <%= link_to "Edit", edit_receipt_path(receipt), class: "text-sm font-semibold" %>
      <%= link_to "Destroy", receipt, class: "text-sm font-semibold", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </td>
</tr>


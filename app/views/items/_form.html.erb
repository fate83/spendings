<%= form_with(model: [receipt, item], class: "contents",
              data: {
                controller: "reset-form reset-autofocus",
                action: "turbo:submit-end->reset-form#reset turbo:submit-end->reset-autofocus#reset"
              }) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul class="list-disc ml-6">
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my=5">
    Einkaufsdatum: <%= @receipt.shopped_at.strftime("%d.%m.%Y") %>
  </div>

  <div>
    Gesch√§ft: <%= @receipt.shop.name %>
  </div>

  <hr>
  <h1 class="font-bold mt-2 text-4xl">Eingabe</h1>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": item.errors[:name].none?, "border-red-400 focus:outline-red-600": item.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": item.errors[:price].none?, "border-red-400 focus:outline-red-600": item.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.text_field :receipt_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full hidden", {"border-gray-400 focus:outline-blue-600": item.errors[:receipt_id].none?, "border-red-400 focus:outline-red-600": item.errors[:receipt_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name, {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": receipt.errors[:shop_id].none?, "border-red-400 focus:outline-red-600": receipt.errors[:shop_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.text_field :amount, value: 1, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": item.errors[:price].none?, "border-red-400 focus:outline-red-600": item.errors[:price].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<tr id="<%= dom_id(user) %>" class="hover:bg-teal-200">
  <td class="px-2 py-2">
    <%= user.email %>
  </td>
  <td class="px-2 py-2">
    <% user.teams.each do |team| %>
      <%= link_to team.name, team_memberships_path(team), class: "w-full sm:w-auto text-center px-3.5 py-2.5 text-sky-500 hover:text-orange-500 inline-block font-medium" %>
    <% end %>
  </td>
  <td class="px-2 py-2">
    <%= user.confirmed? %>
  </td>
  <td class="px-2 py-2">
    <%= user.superadmin? %>
  </td>
  <td class="px-2 py-2">
    <% if user.superadmin? %>
      <%=  link_to "Demote",
                   demote_user_path(user), data: { turbo_method: :patch, turbo_confirm: "Safe demoten?" },
                   class: "p-2 bg-red-400 text-black border rounded-lg hover:bg-red-200 hover:shadow-lg"
      %>

    <% else %>
      <%=  link_to "Promote",
                   promote_user_path(user), data: { turbo_method: :patch },
                   class: "p-2 bg-red-400 text-black border rounded-lg hover:bg-red-200 hover:shadow-lg"
      %>
    <% end %>
    <%=  link_to "Bearbeiten",
                 edit_user_path(user), data: { turbo: false },
                 class: "p-2 bg-sky-500 text-black border rounded-lg hover:bg-orange-500 hover:shadow-lg"
    %>
    <%=  link_to "Löschen",
                 user, data: { turbo_method: :delete, turbo_confirm: "Safe löschen?" },
                 class: "p-2 bg-red-400 text-black border rounded-lg hover:bg-orange-500 hover:shadow-lg"
    %>
  </td>
</tr>
